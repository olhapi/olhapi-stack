---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname;

// Handle locale-aware active states
// Remove locale prefix and trailing slashes from pathname for comparison
const pathWithoutLocale = pathname.replace(/^\/(en|de)/, '').replace(/\/$/, '') || '/';
const hrefWithoutLocale = href?.replace(/^\/(en|de)/, '').replace(/\/$/, '') || '/';
const isActive = hrefWithoutLocale === pathWithoutLocale;

// Pre-compute class name (same pattern as MegaMenu)
const finalClass = isActive
  ? (className ? `${className} active` : 'active')
  : (className || '');
---

<a href={href} class={finalClass} {...props}>
	<slot />
</a>
<style>
	a {
		display: inline-block;
		text-decoration: none;
		padding: var(--space-2) var(--space-3);
		border-radius: var(--radius-md);
		color: var(--color-text-secondary);
		font-weight: 500;
		transition: all var(--duration-fast) var(--ease-out);
	}

	a:hover {
		color: var(--color-primary-blue);
		background-color: var(--color-background-secondary);
	}
	a.active {
		color: var(--color-primary-blue);
		background-color: var(--color-background-secondary);
		font-weight: 600;
	}
</style>
