---
interface Props {
  class?: string;
}

const {
  class: className = ''
} = Astro.props;

const listClasses = [
  'tabs-list',
  className
].filter(Boolean).join(' ');
---

<div class={listClasses} data-tabs-list>
  <slot />
</div>

<style>
  /* Tabs List */
  .tabs-list {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: var(--color-background-secondary);
    border-radius: var(--radius-md);
    padding: var(--space-1);
    border: 1px solid var(--color-border);
    position: relative;
  }

  /* Horizontal Layout */
  .tabs-horizontal .tabs-list {
    margin-bottom: var(--space-4);
    width: fit-content;
  }

  /* Vertical Layout */
  .tabs-vertical .tabs-list {
    flex-direction: column;
    width: 200px;
    flex-shrink: 0;
    align-items: stretch;
    padding: var(--space-2);
  }

  /* Dark Mode Adjustments */
  [data-theme="dark"] .tabs-list {
    background: var(--color-background-tertiary);
    border-color: var(--color-border);
  }

  /* Mobile Optimization */
  @media (max-width: 768px) {
    .tabs-list {
      width: 100%;
      overflow-x: auto;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    .tabs-list::-webkit-scrollbar {
      display: none;
    }

    .tabs-vertical .tabs-list {
      width: 100%;
      flex-direction: row;
    }
  }
</style>