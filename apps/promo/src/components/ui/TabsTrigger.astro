---
interface Props {
  value: string;
  class?: string;
  disabled?: boolean;
}

const {
  value,
  class: className = '',
  disabled = false
} = Astro.props;

const triggerClasses = [
  'tabs-trigger',
  disabled && 'tabs-trigger-disabled',
  className
].filter(Boolean).join(' ');
---

<button
  type="button"
  class={triggerClasses}
  data-tabs-trigger
  data-value={value}
  disabled={disabled}
>
  <slot />
</button>

<style>
  /* Tabs Trigger */
  .tabs-trigger {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    border-radius: var(--radius-sm);
    padding: var(--space-2) var(--space-4);
    font-size: 14px;
    font-weight: 500;
    background: transparent;
    border: none;
    color: var(--color-text-secondary);
    cursor: pointer;
    transition: all var(--duration-fast) var(--ease-out);
    position: relative;
    outline: none;
    min-width: 0;
  }

  .tabs-trigger:hover:not(:disabled) {
    color: var(--color-text-primary);
    background: var(--color-background-tertiary);
  }

  .tabs-trigger:focus-visible {
    outline: 2px solid var(--color-primary-blue);
    outline-offset: 2px;
  }

  /* Active State */
  .tabs-trigger[aria-selected="true"] {
    background: var(--color-background-primary);
    color: var(--color-text-primary);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--color-border);
  }

  /* Disabled State */
  .tabs-trigger-disabled {
    opacity: 0.6;
    cursor: not-allowed;
    pointer-events: none;
  }

  /* Vertical Layout */
  .tabs-vertical .tabs-trigger {
    justify-content: flex-start;
    width: 100%;
    margin-bottom: var(--space-1);
  }

  .tabs-vertical .tabs-trigger:last-child {
    margin-bottom: 0;
  }

  /* Dark Mode Adjustments */
  [data-theme="dark"] .tabs-trigger:hover:not(:disabled) {
    background: var(--color-background-quaternary);
  }

  [data-theme="dark"] .tabs-trigger[aria-selected="true"] {
    background: var(--color-background-secondary);
    border-color: var(--color-border);
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .tabs-trigger {
      transition: none;
    }
  }

  /* Mobile Optimization */
  @media (max-width: 768px) {
    .tabs-trigger {
      padding: var(--space-2) var(--space-3);
      font-size: 13px;
      flex-shrink: 0;
    }
  }
</style>