---
import { ChevronDown } from '@lucide/astro';

interface Props {
  name?: string;
  id?: string;
  required?: boolean;
  disabled?: boolean;
  class?: string;
  size?: 'sm' | 'md' | 'lg';
  variant?: 'default' | 'error' | 'success';
  placeholder?: string;
  'aria-label'?: string;
  'aria-describedby'?: string;
}

const {
  name,
  id,
  required = false,
  disabled = false,
  class: className = '',
  size = 'md',
  variant = 'default',
  placeholder,
  'aria-label': ariaLabel,
  'aria-describedby': ariaDescribedby,
  ...rest
} = Astro.props;

const baseClasses = 'select-wrapper';
const sizeClasses = {
  sm: 'select-sm',
  md: 'select-md',
  lg: 'select-lg'
};

const variantClasses = {
  default: '',
  error: 'select-error',
  success: 'select-success'
};

const wrapperClasses = [
  baseClasses,
  sizeClasses[size],
  variantClasses[variant],
  disabled && 'select-disabled',
  className
].filter(Boolean).join(' ');
---

<div class={wrapperClasses}>
  <select
    class="select-input"
    name={name}
    id={id}
    required={required}
    disabled={disabled}
    aria-label={ariaLabel}
    aria-describedby={ariaDescribedby}
    {...rest}
  >
    {placeholder && <option value="" disabled selected>{placeholder}</option>}
    <slot />
  </select>
  <ChevronDown class="select-icon" size={20} />
</div>

<style>
  /* Base Select Styles */
  .select-wrapper {
    position: relative;
    display: inline-block;
    width: 100%;
  }

  .select-input {
    width: 100%;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-background-secondary);
    color: var(--color-text-primary);
    font-family: inherit;
    font-size: 14px;
    cursor: pointer;
    transition: all var(--duration-fast) var(--ease-out);
    outline: none;
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    padding-right: var(--space-10);
  }

  .select-input:focus {
    border-color: var(--color-primary-blue);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .select-input:hover:not(:disabled) {
    border-color: var(--color-border-hover);
  }

  .select-icon {
    position: absolute;
    right: var(--space-3);
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-text-secondary);
    pointer-events: none;
    transition: transform var(--duration-fast) var(--ease-out);
  }

  /* Size Variants */
  .select-sm .select-input {
    padding: var(--space-2) var(--space-3);
    padding-right: var(--space-8);
    font-size: 13px;
    height: 32px;
  }

  .select-sm .select-icon {
    width: 16px;
    height: 16px;
    right: var(--space-2);
  }

  .select-md .select-input {
    padding: var(--space-3) var(--space-4);
    padding-right: var(--space-10);
    font-size: 14px;
    height: 40px;
  }

  .select-md .select-icon {
    width: 20px;
    height: 20px;
    right: var(--space-3);
  }

  .select-lg .select-input {
    padding: var(--space-4) var(--space-5);
    padding-right: var(--space-12);
    font-size: 16px;
    height: 48px;
  }

  .select-lg .select-icon {
    width: 24px;
    height: 24px;
    right: var(--space-4);
  }

  /* State Variants */
  .select-error .select-input {
    border-color: var(--color-accent-red);
  }

  .select-error .select-input:focus {
    border-color: var(--color-accent-red);
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
  }

  .select-success .select-input {
    border-color: var(--color-accent-green);
  }

  .select-success .select-input:focus {
    border-color: var(--color-accent-green);
    box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.1);
  }

  /* Disabled State */
  .select-disabled .select-input {
    opacity: 0.6;
    cursor: not-allowed;
    background: var(--color-background-tertiary);
  }

  .select-disabled .select-icon {
    opacity: 0.6;
  }

  /* Focus States */
  .select-input:focus {
    outline: none;
  }

  .select-input:focus-visible {
    outline: 2px solid var(--color-primary-blue);
    outline-offset: 2px;
  }

  .select-error .select-input:focus-visible {
    outline-color: var(--color-accent-red);
  }

  .select-success .select-input:focus-visible {
    outline-color: var(--color-accent-green);
  }

  /* Option Styling */
  .select-input option {
    background: var(--color-background-secondary);
    color: var(--color-text-primary);
    padding: var(--space-2);
  }

  .select-input option:disabled {
    color: var(--color-text-tertiary);
    background: var(--color-background-tertiary);
  }

  /* Dark Mode Adjustments */
  [data-theme="dark"] .select-input {
    background: var(--color-background-tertiary);
    border-color: var(--color-border);
  }

  [data-theme="dark"] .select-input:focus {
    background: var(--color-background-secondary);
  }

  [data-theme="dark"] .select-input option {
    background: var(--color-background-tertiary);
    color: var(--color-text-primary);
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .select-input,
    .select-icon {
      transition: none;
    }
  }

  /* Placeholder styling */
  .select-input option[disabled] {
    color: var(--color-text-tertiary);
  }
</style>