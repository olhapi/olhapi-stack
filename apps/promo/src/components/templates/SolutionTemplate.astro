const appUrl = import.meta.env.PUBLIC_APP_URL || '#';
---

<Layout
  title={seo?.title || $t('title')}
  description={seo?.description || $t('description')}
>
  <!-- Hero Section -->
  <section class="solution-hero">
    <Container size="xl">
      <div class="hero-content">
        <div class="hero-text">
          <div class="hero-badge">
            <span class="badge-text">{$t('subtitle')}</span>
          </div>

          <h1 class="hero-headline">
            {$t('hero.headline')}
          </h1>

          <p class="hero-subheadline">
            {$t('hero.subheadline')}
          </p>

          <div class="hero-actions">
            <Button variant="primary" size="lg" href={appUrl}>
              {$t('cta.primaryButton')}
            </Button>
            <Button variant="ghost" size="lg" href="#features">
              Learn More
            </Button>
          </div>
        </div>

        <div class="hero-image">
          <img src={$t('hero.image')} alt={$t('title')} class="hero-img" />
        </div>
      </div>
    </Container>
  </section>

  <!-- Challenges Section -->
  <section class="challenges-section section-padding">
    <Container size="xl">
      <div class="section-header">
        <h2 class="section-title">{currentContent.challenges.title}</h2>
      </div>

      <div class="challenges-grid">
        {currentContent.challenges.items.map((challenge: any) => (
          <div class="challenge-card">
            <div class="challenge-icon">{challenge.icon}</div>
            <h3 class="challenge-title">{challenge.title}</h3>
            <p class="challenge-description">{challenge.description}</p>
          </div>
        ))}
      </div>
    </Container>
  </section>

  <!-- Features Section -->
  <section class="features-section section-padding" id="features">
    <Container size="xl">
      <div class="section-header">
        <h2 class="section-title">{currentContent.features.title}</h2>
      </div>

      <div class="features-grid">
        {currentContent.features.items.map((feature: any) => (
          <Card class="feature-card">
            <div class="feature-content">
              <div class="feature-icon">{feature.icon}</div>
              <h3 class="feature-title">{feature.title}</h3>
              <p class="feature-description">{feature.description}</p>
            </div>
          </Card>
        ))}
      </div>
    </Container>
  </section>

  <!-- Benefits Section -->
  <section class="benefits-section section-padding">
    <Container size="xl">
      <div class="section-header">
        <h2 class="section-title">{currentContent.benefits.title}</h2>
      </div>

      <div class="benefits-grid">
        {currentContent.benefits.items.map((benefit: any) => (
          <div class="benefit-card">
            <div class="benefit-metric">{benefit.metric}</div>
            <div class="benefit-label">{benefit.label}</div>
            <p class="benefit-description">{benefit.description}</p>
          </div>
        ))}
      </div>
    </Container>
  </section>

  <!-- Testimonial Section -->
  <section class="testimonial-section section-padding">
    <Container size="lg">
      <div class="testimonial-card">
        <div class="testimonial-content">
          <blockquote class="testimonial-quote">
            "{$t('testimonial.quote')}"
          </blockquote>
          <div class="testimonial-author">
            <div class="author-info">
              <div class="author-name">{$t('testimonial.author')}</div>
              <div class="author-title">{$t('testimonial.title')}, {$t('testimonial.company')}</div>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- CTA Section -->
  <section class="solution-cta section-padding">
    <Container size="xl">
      <div class="cta-content">
        <h2 class="cta-title">{$t('cta.title')}</h2>
