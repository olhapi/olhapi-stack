---
import { useTranslations } from "../../utils/i18n";
import Container from "../ui/Container.astro";
import Button from "../ui/Button.astro";
import Card from "../ui/Card.astro";
import { Quote } from '@lucide/astro';

interface Props {
    lang: string;
}

const { lang } = Astro.props;

const translations = {
    en: {
        overline: "Ready to Get Started?",
        headline: "Join thousands of developers building the future",
        subheadline: "Start building faster, more reliable web applications today. No credit card required.",
        primaryCta: "Start Free Trial",
        secondaryCta: "Schedule Demo",
        stats: [
            { value: "10K+", label: "Active Developers" },
            { value: "99.9%", label: "Uptime SLA" },
            { value: "< 100ms", label: "Global Latency" },
        ],
        features: ["✓ 14-day free trial", "✓ No setup fees", "✓ Cancel anytime", "✓ 24/7 support"],
        testimonialText:
            "This platform transformed how we build and deploy our applications. The developer experience is unmatched.",
        testimonialAuthor: "Sarah Chen",
        testimonialRole: "Lead Developer, TechCorp",
        trustText: "Trusted by teams at",
    },
    de: {
        overline: "Bereit loszulegen?",
        headline: "Schließen Sie sich Tausenden von Entwicklern an, die die Zukunft gestalten",
        subheadline:
            "Beginnen Sie noch heute mit der Erstellung schnellerer, zuverlässigerer Webanwendungen. Keine Kreditkarte erforderlich.",
        primaryCta: "Kostenlose Testversion",
        secondaryCta: "Demo vereinbaren",
        stats: [
            { value: "10K+", label: "Aktive Entwickler" },
            { value: "99,9%", label: "Verfügbarkeits-SLA" },
            { value: "< 100ms", label: "Globale Latenz" },
        ],
        features: [
            "✓ 14-tägige kostenlose Testversion",
            "✓ Keine Einrichtungsgebühren",
            "✓ Jederzeit kündbar",
            "✓ 24/7 Support",
        ],
        testimonialText:
            "Diese Plattform hat verändert, wie wir unsere Anwendungen erstellen und bereitstellen. Die Entwicklererfahrung ist unübertroffen.",
        testimonialAuthor: "Sarah Chen",
        testimonialRole: "Lead Developer, TechCorp",
        trustText: "Vertraut von Teams bei",
    },
};

const $t = useTranslations(translations, lang);

// Get APP_URL from environment variables
const appUrl = import.meta.env.PUBLIC_APP_URL || "#";
---

<section class="cta-section section" data-section="cta">
    <Container size="xl">
        <div class="cta-content">
            <!-- CTA Header -->
            <div class="cta-header text-center">
                <div class="cta-overline" data-animate="fade-up">
                    <span class="text-overline gradient-text">{$t("overline")}</span>
                </div>

                <h2 class="cta-headline" data-animate="fade-up" data-delay="100">
                    {$t("headline")}
                </h2>

                <p class="cta-subheadline text-body-large" data-animate="fade-up" data-delay="200">
                    {$t("subheadline")}
                </p>

                <!-- CTA Buttons -->
                <div class="cta-buttons" data-animate="fade-up" data-delay="300">
                    <Button variant="primary" size="lg" href={appUrl} glow>
                        {$t("primaryCta")}
                    </Button>
                    <Button variant="ghost" size="lg" href="#demo">
                        {$t("secondaryCta")}
                    </Button>
                </div>

                <!-- Features List -->
                <div class="cta-features" data-animate="fade-up" data-delay="400">
                    <ul class="features-list">
                        {$t("features").map((feature: string) => <li class="feature-item">{feature}</li>)}
                    </ul>
                </div>
            </div>

            <!-- Stats Section -->
            <div class="cta-stats">
                {
                    $t("stats").map((stat: any) => (
                        <div class="stat-item">
                            <div class="stat-value gradient-text">
                                {stat.value}
                            </div>
                            <div class="stat-label">{stat.label}</div>
                        </div>
                    ))
                }
            </div>

            <!-- Testimonial -->
            <Card variant="glass" class="cta-testimonial" data-animate="fade-up" data-delay="600">
                <div class="testimonial-content">
                    <div class="testimonial-quote">
                        <Quote size={24} class="quote-icon" />
                        <p class="testimonial-text">"{$t("testimonialText")}"</p>
                    </div>
                    <div class="testimonial-author">
                        <div class="author-info">
                            <div class="author-name">{$t("testimonialAuthor")}</div>
                            <div class="author-role">{$t("testimonialRole")}</div>
                        </div>
                    </div>
                </div>
            </Card>

            <!-- Trust Indicators -->
            <div class="trust-indicators" data-animate="fade-up" data-delay="700">
                <p class="trust-text">{$t("trustText")}</p>
                <div class="trust-logos">
                    <div class="trust-logo">Microsoft</div>
                    <div class="trust-logo">Google</div>
                    <div class="trust-logo">Meta</div>
                    <div class="trust-logo">Stripe</div>
                    <div class="trust-logo">Shopify</div>
                </div>
            </div>
        </div>
    </Container>

    <!-- Background Elements -->
    <div class="cta-background" aria-hidden="true">
        <div class="gradient-orb orb-1"></div>
        <div class="gradient-orb orb-2"></div>
    </div>
</section>

<style>
    /* CTA Section */
    .cta-section {
        background: var(--color-background-primary);
        position: relative;
        overflow: hidden;
    }

    .cta-content {
        max-width: 900px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
    }

    /* CTA Header */
    .cta-header {
        margin-bottom: var(--space-16);
    }

    .cta-overline {
        margin-bottom: var(--space-4);
    }

    .cta-headline {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        font-weight: 800;
        margin-bottom: var(--space-6);
        color: var(--color-text-primary);
        line-height: 1.1;
    }

    .cta-subheadline {
        color: var(--color-text-secondary);
        margin-bottom: var(--space-8);
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    /* CTA Buttons */
    .cta-buttons {
        display: flex;
        gap: var(--space-4);
        justify-content: center;
        margin-bottom: var(--space-8);
        flex-wrap: wrap;
    }

    /* Features List */
    .cta-features {
        margin-bottom: var(--space-12);
    }

    .features-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: var(--space-6);
    }

    .feature-item {
        color: var(--color-text-secondary);
        font-size: 14px;
        font-weight: 500;
    }

    /* Stats Section */
    .cta-stats {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: var(--space-8);
        margin-bottom: var(--space-16);
        padding: var(--space-8) 0;
        border-top: 1px solid var(--color-border);
        border-bottom: 1px solid var(--color-border);
    }

    .stat-item {
        text-align: center;
    }

    .stat-value {
        font-size: clamp(2rem, 4vw, 2.5rem);
        font-weight: 800;
        margin-bottom: var(--space-2);
        line-height: 1.1;
    }

    .stat-label {
        font-size: 14px;
        color: var(--color-text-tertiary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Testimonial */
    .cta-testimonial {
        margin-bottom: var(--space-16);
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .testimonial-content {
        text-align: center;
    }

    .testimonial-quote {
        margin-bottom: var(--space-6);
    }

    .quote-icon {
        color: var(--color-primary-blue);
        margin-bottom: var(--space-4);
    }

    .testimonial-text {
        font-size: 18px;
        font-style: italic;
        color: var(--color-text-primary);
        margin: 0;
        line-height: 1.6;
    }

    .testimonial-author {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: var(--space-4);
    }

    .author-info {
        text-align: center;
    }

    .author-name {
        font-weight: 600;
        color: var(--color-text-primary);
        margin-bottom: var(--space-1);
    }

    .author-role {
        font-size: 14px;
        color: var(--color-text-secondary);
    }

    /* Trust Indicators */
    .trust-indicators {
        margin-top: var(--space-8);
        text-align: center;
    }

    .trust-text {
        font-size: 14px;
        color: var(--color-text-tertiary);
        margin-bottom: var(--space-4);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .trust-logos {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: var(--space-8);
        flex-wrap: wrap;
    }

    .trust-logo {
        font-weight: 600;
        color: var(--color-text-tertiary);
        opacity: 0.6;
        transition: opacity var(--duration-fast) var(--ease-out);
    }

    .trust-logo:hover {
        opacity: 1;
    }

    /* Background Elements */
    .cta-background {
        position: absolute;
        inset: 0;
        pointer-events: none;
        z-index: 1;
    }

    .gradient-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.3;
        animation: pulse 10s ease-in-out infinite;
    }

    .orb-1 {
        width: 500px;
        height: 500px;
        background: var(--gradient-primary);
        top: -250px;
        left: -250px;
        animation-delay: 0s;
    }

    .orb-2 {
        width: 400px;
        height: 400px;
        background: var(--gradient-secondary);
        bottom: -200px;
        right: -200px;
        animation-delay: 5s;
    }

    @keyframes pulse {
        0%,
        100% {
            transform: scale(1);
            opacity: 0.3;
        }
        50% {
            transform: scale(1.2);
            opacity: 0.5;
        }
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .cta-buttons {
            flex-direction: column;
            align-items: center;
        }

        .cta-buttons > * {
            width: 100%;
            max-width: 280px;
        }

        .features-list {
            flex-direction: column;
            align-items: center;
            gap: var(--space-3);
            text-align: center;
        }

        .cta-stats {
            grid-template-columns: 1fr;
            gap: var(--space-8);
            text-align: center;
            padding: var(--space-6) var(--space-4);
            margin: 0 calc(-1 * var(--space-4));
            overflow-x: hidden;
        }

        .stat-item {
            padding: var(--space-4) var(--space-2);
            min-width: 0;
            text-align: center;
        }

        .stat-value {
            font-size: clamp(1.75rem, 5vw, 2rem);
            word-break: break-word;
        }

        .stat-label {
            font-size: 13px;
            word-break: break-word;
        }

        .trust-logos {
            gap: var(--space-4);
            justify-content: center;
        }

        .trust-indicators {
            text-align: center;
        }

        .orb-1,
        .orb-2 {
            width: 300px;
            height: 300px;
        }
    }

    /* Extra Small Mobile Devices */
    @media (max-width: 480px) {
        .cta-stats {
            gap: var(--space-6);
            padding: var(--space-4) var(--space-2);
            margin: 0 calc(-1 * var(--space-2));
        }

        .stat-item {
            padding: var(--space-3) var(--space-1);
            text-align: center;
        }

        .stat-value {
            font-size: clamp(1.5rem, 6vw, 1.75rem);
        }

        .stat-label {
            font-size: 12px;
            line-height: 1.3;
        }
    }

    /* Dark Mode Adjustments */
    [data-theme="dark"] .gradient-orb {
        opacity: 0.2;
    }

    [data-theme="dark"] .cta-stats {
        border-color: var(--color-border);
    }

    /* Reduced Motion */
    @media (prefers-reduced-motion: reduce) {
        .gradient-orb {
            animation: none;
        }
    }

    /* Focus States */
    .cta-testimonial:focus-within {
        outline: 2px solid var(--color-primary-blue);
        outline-offset: 2px;
    }
</style>

<!-- Animations handled by GSAP ScrollTrigger through centralized animation system -->
