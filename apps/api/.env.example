# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/olhapi_db

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# CORS Configuration
# Supports multiple origins separated by commas
CLIENT_ORIGIN=http://localhost:3000,http://localhost:4321

# Authentication (Better Auth)
AUTH_SECRET=your-super-secure-secret-key-here-at-least-32-chars
AUTH_URL=http://localhost:3001

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Your App Name

# S3 Storage Configuration
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-s3-access-key-id
S3_SECRET_ACCESS_KEY=your-s3-secret-access-key
S3_ENDPOINT=https://s3.amazonaws.com
S3_PRIVATE_BUCKET_NAME=your-private-bucket-name
S3_PUBLIC_BUCKET_NAME=your-public-bucket-name
S3_PUBLIC_URL=https://your-public-bucket-name.s3.us-east-1.amazonaws.com

# Billing Configuration (Autumn.js)
AUTUMN_SECRET_KEY=your-autumn-secret-key-here

# Optional: Rate Limiting
RATE_LIMIT_MAX=100

# Optional: Upload Configuration
UPLOAD_SIZE_LIMIT=10485760
UPLOAD_AUTH_REQUIRED=true

# Optional: Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn-here